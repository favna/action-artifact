{
	"name": "action-artifact",
	"version": "2.0.1",
	"description": "Upload artifacts to releases",
	"main": "dist/index.js",
	"author": "iCrawl <icrawltogo@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"prebuild": "npm run lint",
		"build": "ncc build src/main.ts --minify",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix"
	},
	"dependencies": {
		"@actions/core": "^1.10.0",
		"@actions/github": "^5.1.1",
		"@actions/glob": "^0.4.0"
	},
	"devDependencies": {
		"@octokit/rest": "^19.0.13",
		"@types/eslint": "^8.40.2",
		"@types/glob": "^8.1.0",
		"@types/node": "^20.3.2",
		"@zeit/ncc": "^0.22.3",
		"eslint": "^8.43.0",
		"eslint-config-neon": "^0.1.47",
		"prettier": "^2.8.8",
		"typescript": "^5.1.3"
	},
	"eslintConfig": {
		"extends": [
			"neon/common",
			"neon/node",
			"neon/typescript",
			"neon/prettier"
		],
		"parserOptions": {
			"project": "./tsconfig.json",
			"warnOnUnsupportedTypeScriptVersion": false
		},
		"ignorePatterns": [
			"**/dist/*"
		]
	}
}
